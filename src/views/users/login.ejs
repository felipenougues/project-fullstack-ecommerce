<html>
<html lang="en">
<%- include('../partials/head.ejs',{title:"Login",stylesheets:["login.css"]}) %>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <div class="cuadrante">
            <form action="/users/login" method="post">
                <input class="inputs-formulario email" placeholder="Correo Electronico" type="text" name="email">
                <p class="error-msg"></p>
                <input class="inputs-formulario password" placeholder="Contraseña" type="password" name="password">
                <p class="error-msg"></p>
                <% if(locals.errors && errors.msg) { %>
                    <div>
                        <p style="color:red"><%= errors.msg %> </p>
                    </div>
                <% } %> 
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="remember_user">Recordar mi usuario
                    </label>
                </div>
                <button type="submit" class="boton">Ingresar</button>
                <label class="text"><a href="#">¿Olvidaste tu contraseña?</a></label>
            </form>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
    <script src="/js/login.js"></script>
</body>

</html>