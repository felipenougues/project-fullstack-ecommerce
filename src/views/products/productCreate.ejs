<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head.ejs',{title:"Creación de Producto",stylesheets:["productCreate.css"]}) %>

<body>
    <%- include('../partials/header.ejs') %>       <!-- Inclusión de Header con EJS -->

	<div class="caja-formulario">
			<h2>Formulario de creación de productos</h2>
		<div >
			<form action="/products/productCreate" method="post" enctype="multipart/form-data">
				<div  class="caja-formulario">
					<div >
						<label class="align-formulario" for="name" >Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Vestido Retazeado" class="inputs-formulario">
						<p class="error-msg"></p>
						<% if (locals.errors && errors.name) { %>
							<div class="text-danger">
								<%= errors.name.msg %> 
							</div>
						<% } %>
					</div>
					<div >
						<label class="align-formulario" for="price" >Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 120" class="inputs-formulario">
						<p class="error-msg"></p>
						<% if (locals.errors && errors.price) { %>
							<div class="text-danger">
								<%= errors.price.msg %> 
							</div>
						<% } %>
					</div>
					<div >
						<label class="align-formulario" for="discount" >Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="inputs-formulario">
						<% if (locals.errors && errors.discount) { %>
							<div class="text-danger">
								<%= errors.discount.msg %> 
							</div>
						<% } %>
					</div>
					<div>
						<label for="category" class="align-formulario">Categoría:</label>
						<select name="category" id="category" class="inputs-formulario">
							<option value="1">Seleccionar</option>
							<option value="1">Vestidos</option>
							<option value="2">Abrigos</option>
							<option value="3">Pantalon Dama</option>
							<option value="4">Pantalon Hombre</option>
							<option value="5">Camisa</option>
							<option value="6">Otro</option>
						</select>
						<p class="error-msg"></p>
					</div>
					<div>
						<label for="size" class="align-formulario">Talle:</label>
						<select name="size" id="size" class="inputs-formulario">
							<option value="S">Seleccionar</option>
							<option value="S">S</option>
							<option value="M">M</option>
							<option value="L">L</option>
							<option value="XL">XL</option>
						</select>
						<p class="error-msg"></p>
					</div>
					
					<div>
						<label class="align-formulario" for="description" >Descripción:</label>
						<textarea name="description" id="description" class="inputs-formulario"></textarea>
						<p class="error-msg"></p>
						<% if (locals.errors && errors.description) { %>
							<div class="text-danger">
								<%= errors.description.msg %> 
							</div>
						<% } %>
					</div>
					<div>
						<label  class="align-formulario" for="productImage">Imagen de producto: </label>
						<input type="file" id="productImage" name="productImage" class="inputs-formulario">
						<p class="error-msg"></p>
						<% if (locals.errors && errors.productImage) { %>
							<div class="text-danger">
								<%= errors.productImage.msg %> 
							</div>
						<% } %>
					</div>
					<div>
						<button type="submit" class="boton-input">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<%- include('../partials/footer.ejs') %>       <!-- Inclusión de Footer con EJS -->
	<script src="/js/productCreate.js"></script>
</body>	
</html>